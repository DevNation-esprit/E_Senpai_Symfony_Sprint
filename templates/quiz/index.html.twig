{% extends 'base.html.twig' %}

{% block body %}


    <table class="table table-striped">
        <thead>
        <tr>
            <th colspan="1"><h1 style="margin-top: 150px">Quiz </h1></th>
            <th><h5><a href="{{ path('quiz_new',{'id': app.user.id } )}}"><i  style="font-size: 24px" class="fa fa-plus-square " aria-hidden="true"></i> New Quiz</a></h5></th>
        </tr>
            <tr>
                <th>Sujet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{{ quiz.sujet }}</td>
                <td>
                    <a href="{{ path('quiz_show', {'id': quiz.id}) }}"><i style="font-size:24px;" class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('quiz_edit', {'id': quiz.id}) }}"> <i style="font-size:24px;margin-left: 20px;" class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
