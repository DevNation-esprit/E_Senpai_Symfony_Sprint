{% block body %}
<div class="wrap-login100">

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.prenom, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.sexe, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.dateNaissance) }}
        {{ form_row(registrationForm.login, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.role, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.status, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.email, {'attr':{'class':'input100'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr':{'class':'input100'}
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="login100-form-btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
